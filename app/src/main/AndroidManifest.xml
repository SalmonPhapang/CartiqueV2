<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="car.com.cartique">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchableActivity"
            android:label="Search"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="Sign Up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="Cartique"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Reset Password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultsActivity"
            android:label="Result"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecordOrderDetails"
            android:label="Order Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuotesActivity"
            android:label="Result"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServiceBookDetails"
            android:label="Service"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecordOrderActivity"
            android:label="Orders"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CompleteSignUpCarActivity"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <!-- Firebase Notifications -->
        <service android:name=".service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <receiver
            android:name=".service.MyAlarmReceiver"
            android:process=":remote"/>

        <service
            android:name=".service.MyTestService"
            android:exported="false" />
        <!-- ./Firebase Notifications -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".CompleteSignUpActivity"
            android:label="@string/title_activity_complete_sign_up" />
        <activity android:name=".QuoteDetailsActivity" />
        <activity
            android:name=".about.AboutActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity" />
        <activity
            android:name=".calender.CalenderActivity"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".about.PrivacyPolicyActivity"
            android:label="Privacy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".about.TermsActivity"
            android:label="Terms and Conditions"
            android:screenOrientation="portrait" />
        <activity android:name=".OrderStatusActivity"
            android:label="Order Status"
            android:screenOrientation="portrait"/>
    </application>

</manifest>