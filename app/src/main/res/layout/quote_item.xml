<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <car.com.cartique.app.CircularNetworkImageView
                android:id="@+id/profilePic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_quote" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtquoteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtquoteDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txtquoteAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amount"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtquoteStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:text="hello3"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/quoteBtnLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnAcceptQuote"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginStart="@dimen/_63sdp"
                        android:background="@drawable/circle"
                        android:drawableTop="@drawable/ic_done_white_24dp" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnDeclineQuote"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:background="@drawable/circle"
                        android:drawableTop="@drawable/ic_clear_white_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#ffc0c0c0" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>